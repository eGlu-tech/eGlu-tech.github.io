---
import { getCollection } from 'astro:content';
import '../styles/global.css';
import '../styles/index.css';
import { blogName } from '../constants.ts';
import Footer from '../components/footer/Footer.astro';
import BaseHead from '../components/base-head/BaseHead.astro';

const posts = await getCollection('blog');
// Sort by date (you might need a real date object for perfect sorting, but this works for now)
const articles = posts.map(post => ({
  ...post.data,
  slug: post.slug
})).sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<html lang="en">
	<BaseHead title={`${blogName} | Blog`} />
	<body>
		<div class="container">
			<main>
				<header style="margin-bottom: 1.5rem;">
					<a href="/" class="brand-link">
						<h1>{blogName}</h1>
					</a>
					<p class="subtitle">Notes on technology, design, and engineering.</p>
				</header>

				<div class="articles-list">
					{articles.map((article) => (
						<a href={`/blog/${article.slug}`} class="article-card">
							<span class="article-date">{article.date}</span>
							<h2 class="article-title">{article.title}</h2>
							<p class="article-description">{article.description}</p>
						</a>
					))}
				</div>
			</main>

			<Footer />
		</div>
	</body>
</html>
